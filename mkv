#!/bin/bash
set -e

VOLUMES="${VOLUMES:-localhost:3001,localhost:3002,localhost:3003}"
PORT="${PORT:-3000}"
DATA="${DATA:-./data}"

if [ ! -f "./minivault" ]; then
    echo "Building minivault..."
    go build -o minivault src/*.go
fi

mkdir -p "$DATA"

exec ./minivault -mode master -port "$PORT" -volumes "$VOLUMES" -data "$DATA"